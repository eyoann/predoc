{% extends 'layouts/app.html.twig' %}

{% block body %}
	<div class="container">
    	<div class="col-md-8 col-md-offset-2 padding50">
			<h4 class="text-t1 text-muted">
			{% if user.get('gender') is sameas("H") %}
			Monsieur
			{% else %}
			Madame/Mademoiselle
			{% endif %}
			 {{ user.get('nom') }} {{ user.get('prenom') }}</h4>
    		<div class="well col-xs-12">
    			<h3 class="text-center text-primary text-t2"> {{ question.text }} </h3>
    		</div>
    		<div class="col-xs-12">
    			{% for response in question.responses %}
	    			{% if response.nextQuestion %}
						<div class="col-md-6">
							<a class="care_qst" href="{{ path('question', {id : response.nextQuestion.id, response : response.id} ) }}">
								<b>{{ response.text }}</b>
							</a>
						</div>
					{% else %}
						<div class="col-md-6">
							<a class="care_qst" href="{{ path('recapitulatif', {response : response.id}) }}">
								<b>{{ response.text }}</b>
							</a>
						</div>
					{% endif %}
    			{% endfor %}
    		</div>
 		</div>
	</div>
{% endblock %}