{% extends 'doctor/app.html.twig' %}

{% block body %}
    <br>
    <br>
    <br>
    <div class="panel panel-default">
        <div class="panel-heading">Mon compte</div>
        <div class="bg-gray-lighter panel-body">
            {{ form_start(form) }}
            <div class="form-group">
                <label class="col-sm-3 control-label">Nom</label>
                <div class="col-sm-9">
                    {{ form_widget(form.lastname) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Prénom</label>
                <div class="col-sm-9">
                    {{ form_widget(form.firstname) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">RPPS</label>
                <div class="col-sm-9">
                    {{ form_widget(form.rpps) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Téléphone</label>
                <div class="col-sm-9">
                    {{ form_widget(form.phone) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Adresse 1</label>
                <div class="col-sm-9">
                    {{ form_widget(form.address1) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Adresse 2</label>
                <div class="col-sm-9">
                    {{ form_widget(form.address2) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Adresse 3</label>
                <div class="col-sm-9">
                    {{ form_widget(form.address3) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Code postal</label>
                <div class="col-sm-9">
                    {{ form_widget(form.zipcode) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Ville</label>
                <div class="col-sm-9">
                    {{ form_widget(form.city) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Pays</label>
                <div class="col-sm-9">
                    {{ form_widget(form.country) }}
                </div>
            </div>
            <div class="col-md-6">
            <div class="form-group">
                <div class="col-xs-12 text-right">
                    <button class="btn btn-primary" type="submit"> Valider </button>
                </div>
            </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}