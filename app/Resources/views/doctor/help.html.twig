{% extends 'doctor/app.html.twig' %}

{% block body %}
	<br>
	<br>
	<br>
	<br>
	<form action="{{ path('help', { id : app.user.contact.id }) }}" class="form-horizontal" method="post">
		<div class="container">
			<div class="panel panel-default">
				<div class="panel-body">
					<div class="form-group">
					    <label for="email" class="col-xs-4 control-label">Sujet</label>
					    <div class="col-xs-4">
							<input type="text" class="form-control" id="subject" placeholder="Sujet" name="subject">
						</div>
					</div>
					<div class="form-group">
					    <label for="email" class="col-xs-4 control-label">Message</label>
					    <div class="col-xs-4">
							<textarea name="text" rows=10 COLS=40></textarea>
						</div>
					</div>
					<div class="form-group">
					    <div class="col-xs-4">
					        <button type="submit" class="btn btn-primary btn-block">Envoyer</button>
					     </div>
					</div>
				</div>
			</div>
		</div>
	</form>

{% endblock %}